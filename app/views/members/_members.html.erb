<div class="float-right">
<%= link_to 'Create Member', new_member_path, class: "btn btn-success align-right" %>
</div>

<h3 class="text-center">Members</h3>
<div class="table-responsive">
   <table class="table table-striped table-bordered">
      <thead>
         <tr>
            <th scope="col">Last Name</th>
            <th scope="col">First Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Actions</th>
         </tr>
      </thead>
      <tbody>
         <% members.each do |m| %>
            <tr>
               <td scope="row"><%= m.last_name %></td>
               <td><%= m.first_name %></td>
               <td><%= m.phone_number %></td>
               <td>
                  <%= link_to 'View', member_path(m), class: "btn btn-sm btn-primary"%> 
                  <%= link_to 'Edit', edit_member_path(m), class: "btn btn-sm btn-success"%>
                  <%= link_to 'Delete Member', destroy_member_path(m), method: :delete, class: "btn btn-sm btn-danger" %>     
               </td>
            </tr>
         <% end %>
      </tbody>
   </table>
</div>
