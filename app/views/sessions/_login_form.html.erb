<h1>Log In</h1>
<br>
<%= form_for @gym , url: "/sessions", method: :post do |f| %>
   <div class="form-group row">
      <div class="col-7">
         <%= f.label "Email:"%>
         <%= f.email_field :email, class: "form-control"%>
         <%= content_tag :small, "#{@gym.errors.full_messages_for(:email).to_sentence}" if @gym.errors[:email].any? %>
      </div>
   </div>
   <div class="form-group row">
      <div class="col-7">
         <%= f.label "Password"%>
         <%= f.password_field :password, class: "form-control"%>
      </div>
   </div>
   <div class="form-group row">
      <div class="col">
         <%= f.submit "Log In", class: "btn btn-primary"%>
         <%= link_to "Login with Github", "/auth/github", class: "btn btn-dark"%>
      </div>
   </div>
<% end %>