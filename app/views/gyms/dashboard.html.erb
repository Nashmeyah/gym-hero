<h3 class>Dashboard for: <%= current_gym.name%></h3>

<hr>
<%= current_gym.uid %>
<hr>
<div class="card-group">
   <div class="card border-primary text-center">
      <%= link_to "#{current_gym.members.count} <br /> Members".html_safe , members_path, class: "card-body counter"%>
   </div>
   <div class="card border-success text-center">
   <div class="card-body">
      <%= current_gym.gym_classes.count %> <br> Classes
      </div>
   </div>
   <div class="card border-dark text-center">
   <div class="card-body">
      <%= current_gym.scheduled_classes.todays_classes.count%> <br> Classes Today
      </div>
   </div>
</div>
<br>
<div class="card-group">
   <div class="card bg-primary">
      <%= link_to 'Create Gym Member', new_member_path, class: "card-body text-center"%>
   </div>

   <div class="card bg-success">
      <%= link_to 'Create Class', new_gym_class_path, class: "card-body text-center"%>
   </div>
</div>