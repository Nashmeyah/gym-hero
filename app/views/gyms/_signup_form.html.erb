<h1>Sign Up</h1>
<br>

<%= form_for @gym do |f| %>
   <div class="form-group row">
      <div class="col-7">
         <%= f.label "Email:"%>
         <%= f.email_field :email, class: "form-control"%>
         <%= content_tag :small, "#{@gym.errors.full_messages_for(:email).to_sentence}" if @gym.errors[:email].any?%>
      </div>
   </div>
   <div class="form-group row">
      <div class="col-7">
         <%= f.label "Password"%>
         <%= f.password_field :password, class: "form-control"%>
         <%= content_tag :small, "#{@gym.errors.full_messages_for(:password).to_sentence}" if @gym.errors[:password].any?%>
         </div>
   </div>
   <div class="form-group row">
      <div class="col">
      <%= f.submit "Sign Up", class: "btn-primary"%>
   <%= button_to "Sign Up / Log In with Github", "/auth/github", class: "btn-dark"%>
      </div>
   </div>
<% end %>
