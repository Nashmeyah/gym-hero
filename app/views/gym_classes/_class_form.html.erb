Testing New Class Form w/ Scheduled Class

<%= form_with model: @class, local: true do |n| %>
   <%=n.label "Name" %>
   <%=n.text_field :name %>
   <br>
   <%=n.label "Description:" %>
   <%=n.text_field :description %>
   <br>
   <%=n.label "Duration (minutes):" %>
   <%=n.number_field :duration %>
   <br>
   <%=n.label "Max Size:" %>
   <%=n.number_field :max_size %>
   <br>
   <%= n.fields_for :scheduled_classes, @scheduled_class do |sc| %>
      <%= sc.label "Date + Time:"%>
      <%= sc.datetime_field :time %>
         <br>
      <%= sc.label "with Member (optional):"%>
      <%= sc.collection_select :member_id, current_gym.members.all , :id, :name, {include_blank: "Add a Member"}%>
      <% end %>
   <%=n.submit "#{button} Gym Class"%>
<% end %>